<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <TextView
    android:id="@+id/sectionHeaderText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp16"
    android:gravity="center|start"
    android:textAllCaps="true"
    android:textColor="@color/purple_500"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="MEDICINE" />

  <TextView
    android:id="@+id/sectionHeaderCount"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp16"
    android:background="@drawable/bg_count"
    android:gravity="center"
    android:textColor="@color/black"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="@id/sectionHeaderText"
    app:layout_constraintStart_toEndOf="@id/sectionHeaderText"
    app:layout_constraintTop_toTopOf="@id/sectionHeaderText"
    tools:text="1"
    tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>